@using Panmedia.EventManager.ViewModels;
@model RegisterParticipantVM

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Hi, @Model.ParticipantName</h4>
        </div>       

        @using (Html.BeginFormAntiForgeryPost(Url.Action("RegisterModalPopUp", "Event",
                            new
                            {
                                area = "Panmedia.EventManager",
                                userName = Model.UserName,
                                participantName = Model.ParticipantName,
                                comment = Model.Comment,
                                eventId = Model.EventId
                            })))
        {
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-8">
                        Your comment:<br />

                        <div class="editor-label">
                            @Html.LabelFor(m => m.Comment, @T("Kommentar"))
                        </div>
                        <div class="editor-field">
                            <input id="@Html.FieldIdFor(m => m.Comment)" type="text" placeholder="Kommentar" value="@Model.Comment" name="@Html.FieldNameFor(m => m.Comment)" size="60" />
                            @*@Html.TextBoxFor(m => m.Comment, new { @class = "form-control textMedium" })*@
                            @Html.ValidationMessageFor(m => m.Comment)
                        </div>

                    </div>
                    <div class="col-sm-4">

                    </div>
                </div>
            </div>
        <input type="hidden" name="eventId" value="@Model.EventId" />
        <input type="hidden" name="userName" value="@Model.UserName" />
        <input type="hidden" name="participantName" value="@Model.ParticipantName" />        
       
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Luk</button>
            <button type="submit" class="btn btn-default">Gem</button> @*data-dismiss="modal" name="submit"*@
        </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->